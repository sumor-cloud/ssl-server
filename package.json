    "https"
  ],
  "dependencies": {
    "@sumor/error": "^1.0.4",
    "@sumor/logger": "^1.2.7",
    "chokidar": "^3.6.0",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "selfsigned": "^2.4.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "axios": "^1.6.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^3.2.5"
  },
  "files": [
    "src",
    "LICENSE",
    "index.js",
    ".gitignore"
  ],
  "engines": {
